<html>

<% include ../partials/navbar.ejs %>

<head>
  <title>SMUSH - Reset Password</title>
  <% include ../partials/head.ejs %>
</head>

<body>
  <p style="margin-bottom:10%;"> </p>
  <div class="container">
    <div class="row">
      <div class='col-md-5 offset-md-4'>
        <div class="shadow p-3 mb-5 bg-white rounded">

          <!-- Title -->
          <h3> Enter your email to reset your password. Check your email for a link to the password reset page.</h3><br>

          <div class='row'>

            <!-- Enter Email Form -->
            <div class='col-md-6 offset-md-3'>
              <form action='/contact/reset-password' method='POST'>
                <div class="form-group row">
                    <input class="form-control" type="email" name='email' placeholder="input your email...">
                </div>
                <button type="submit" class="btn btn-large btn-success">Confirm</button>
              </form>
            </div>

          </div>

          <% include ../partials/message.ejs %>

        </div>
      </div>
    </div>
  </div>
</body>
